<h1>Listing members</h1>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Voice</th>
      <th>Phone No.</th>
      <th>Practice</th>
      <th>Attendance</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.voice %></td>
        <td><%= member.phonenumber %></td>
        <td><%= member.practice %></td>
        <td><%= member.attendance %></td>

        <td><%= link_to 'Show',member ,class:'btn' %></td>
        <td><%= link_to 'Edit', edit_member_path(member) ,class: 'btn btn-primary'%></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } ,class:'btn btn-warning' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

